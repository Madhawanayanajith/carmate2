<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@drawable/blur"
tools:context=".SinglecarActivity">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="199dp"
                android:layout_height="132dp"
                android:layout_marginTop="15dp"
                android:elevation="7dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/imageViewcar1"
                android:layout_width="199dp"
                android:layout_height="132dp"
                android:src="@drawable/a" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Car name"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_textview_car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Car name"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/editions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Editions"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_textview_editions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Editions"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Type"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_textview_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Type"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/manufactured_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Manufactured year"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_textview_manufactured_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Manufactured year"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Brand"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_textview_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Brand"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Price"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_textview_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="price"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/fuel_consumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Fuel consumption"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_textview_fuel_consumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Fuel consumption"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Seats"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_textview_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Seats"
                android:textSize="15dp"/>


            <TextView
                android:id="@+id/specifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Specifications"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_textview_specifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Specifications"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/pros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Pros"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_textview_pros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Pros"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Cons"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_textview_cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Cons"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/service_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Service cost"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_textview_service_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Service cost"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/certificates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Certificates"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_textview_certificates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Certifications"
                android:textSize="15dp"/>


            <Button
                android:id="@+id/button14"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/blue"
                />

            <Button
                android:id="@+id/compare"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/blue"
                 android:onClick="onCompareButtonClick"
                android:text="Compare" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>