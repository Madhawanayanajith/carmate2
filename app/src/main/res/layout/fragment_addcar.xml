<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddcarFragment"
    android:background="@drawable/blur">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Welcome admin,"
                    android:textColor="#FAF9F9"
                    android:textSize="20dp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Enter the car details"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView6"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="16dp"
                    android:elevation="7dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/the1" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Add car photo"
                        android:textSize="15dp" />


                    <ImageView
                        android:id="@+id/imageViewcar"
                        android:layout_width="300dp"
                        android:layout_height="84dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/button"
                        android:src="@android:drawable/ic_menu_gallery" />

                    <Button
                        android:id="@+id/addbutton"
                        android:layout_width="115dp"
                        android:layout_height="37dp"
                        android:layout_marginLeft="115dp"
                        android:backgroundTint="@color/blue"
                        android:text="Add photo" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView_car_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Car name"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editText_car_name"
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button"
                    android:ems="10"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/textView_editions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Editions"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editText_editions"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button"
                    android:ems="10"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/textView_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Type"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editText_type"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button"
                    android:ems="10"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/textView_manufactured_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Manufactured year"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editText_manufactured_year"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button"
                    android:ems="10"
                    android:inputType="text"/>

                <TextView
                    android:id="@+id/textView_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Brand"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editText_brand"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button"
                    android:ems="10"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/textView_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Price"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editText_price"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button"
                    android:ems="10"
                    android:inputType="text" />
                <TextView
                    android:id="@+id/textView_fuel_consumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Fuel consumption"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editText_fuel_consumption"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button"
                    android:ems="10"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/textView_seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Seats"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editText_seats"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button"
                    android:ems="10"
                    android:inputType="text" />


                <TextView
                    android:id="@+id/textView_specifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Specifications"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editText_specifications"
                    android:layout_width="300dp"
                    android:layout_height="106dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start|top"
                    android:background="@drawable/button"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/textView_pros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Pros"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editText_pros"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/textView_cons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Cons"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editText_cons"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/textView_service_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Service cost"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editText_service_cost"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button"
                    android:ems="10"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/textView_certificates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Certificates"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editText_certificates"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/blue"
                    android:text="Add" />

                <Button
                    android:id="@+id/comparecar"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/blue"
                    android:text="Add car2 compare" />


            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

